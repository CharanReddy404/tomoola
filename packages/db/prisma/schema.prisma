generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  ARTIST
  ADMIN
}

enum BookingStatus {
  REQUESTED
  ACCEPTED
  DECLINED
  COMPLETED
  CANCELLED
}

enum KycStatus {
  NOT_SUBMITTED
  PENDING
  VERIFIED
  REJECTED
}

enum MediaType {
  PHOTO
  VIDEO_LINK
}

model User {
  id        String   @id @default(cuid())
  phone     String   @unique
  email     String?  @unique
  name      String
  role      UserRole @default(CLIENT)
  avatarUrl String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  artistProfile ArtistProfile?
  bookings      Booking[]       @relation("ClientBookings")
  reviews       Review[]
}

model ArtistProfile {
  id            String    @id @default(cuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])
  groupName     String
  description   String?
  artForms      ArtistArtForm[]
  groupSize     Int       @default(1)
  basePrice     Int
  priceUnit     String    @default("event")
  serviceAreas  String[]
  basedIn       String
  languages     String[]  @default(["Kannada"])
  experience    Int?
  isApproved    Boolean   @default(false)
  isActive      Boolean   @default(true)
  kycStatus     KycStatus @default(NOT_SUBMITTED)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  media         Media[]
  availability  Availability[]
  bookings      Booking[]
  reviews       Review[]
}

model ArtForm {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  region      String?
  category    String?
  imageUrl    String?
  createdAt   DateTime @default(now())

  artists     ArtistArtForm[]
}

model ArtistArtForm {
  id              String        @id @default(cuid())
  artistProfileId String
  artFormId       String
  artistProfile   ArtistProfile @relation(fields: [artistProfileId], references: [id])
  artForm         ArtForm       @relation(fields: [artFormId], references: [id])

  @@unique([artistProfileId, artFormId])
}

model Media {
  id              String        @id @default(cuid())
  artistProfileId String
  artistProfile   ArtistProfile @relation(fields: [artistProfileId], references: [id])
  type            MediaType
  url             String
  caption         String?
  sortOrder       Int           @default(0)
  flaggedAt       DateTime?
  flagReason      String?
  removedAt       DateTime?
  createdAt       DateTime      @default(now())

  @@index([flaggedAt])
  @@index([removedAt])
}

model Availability {
  id              String        @id @default(cuid())
  artistProfileId String
  artistProfile   ArtistProfile @relation(fields: [artistProfileId], references: [id])
  date            DateTime      @db.Date
  isBlocked       Boolean       @default(false)

  @@unique([artistProfileId, date])
}

model Booking {
  id              String        @id @default(cuid())
  clientId        String
  client          User          @relation("ClientBookings", fields: [clientId], references: [id])
  artistProfileId String
  artistProfile   ArtistProfile @relation(fields: [artistProfileId], references: [id])
  eventDate       DateTime      @db.Date
  eventTime       String?
  eventType       String
  eventLocation   String
  venueAddress    String?
  duration        Int?
  message         String?
  status          BookingStatus @default(REQUESTED)
  completedAt     DateTime?
  cancelledAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  review          Review?
}

model Review {
  id              String        @id @default(cuid())
  bookingId       String        @unique
  booking         Booking       @relation(fields: [bookingId], references: [id])
  clientId        String
  client          User          @relation(fields: [clientId], references: [id])
  artistProfileId String
  artistProfile   ArtistProfile @relation(fields: [artistProfileId], references: [id])
  rating          Int
  comment         String?
  flaggedAt       DateTime?
  flagReason      String?
  removedAt       DateTime?
  createdAt       DateTime      @default(now())

  @@index([flaggedAt])
  @@index([removedAt])
}
